# Dataset
def get_data(root=trainset):
    """
    Returns a preprocessed DataLoader from root folder
    """
    def rgb2bgr(img):
        img = torch.np.asarray(img)
        return img[:,:,::-1]
    def sub_mean(img):
        means_bgr = torch.Tensor([103.939, 116.779, 123.68]).unsqueeze(1).unsqueeze(2)
        return img - means_bgr.expand_as(img)
    custom_transform = transforms.Compose([
                        transforms.Lambda(rgb2bgr),
                        transforms.ToPILImage(),
                        transforms.Scale(imsize),
                        transforms.CenterCrop(cropsize),
                        transforms.ToTensor(),
                        transforms.Lambda(lambda x: x.mul(255)),
                        transforms.Lambda(sub_mean)])
    data = ImageFolder(root=root, transform=custom_transform)
    return DataLoader(data, shuffle=True, batch_size=batchsize, num_workers=1)

DFCVAE = model.DFCVAE(batchsize).cuda()
VGG_loss = model.VGG19().eval().cuda()
for param in VGG_loss.parameters():
    param.requires_grad = False

def MSE(x, y):
    sq_err = torch.pow(y.sub(x), 2)
    return sq_err.sum() / x.numel()

def loss_function(feats_x, feats_r, mu, logvar):
    FPL = 0
    for i in range(len(feats_x)):
        FPL += MSE(feats_x[i], feats_r[i]) * 0.5
    KLD_el = mu.pow(2).add_(logvar.exp()).mul_(-1).add_(1).add_(logvar)
    KLD = torch.sum(KLD_el).mul_(-0.5)
    return FPL + KLD

optimizer = optim.Adam(DFCVAE.parameters(), lr=5e-3, betas=(0.9, 0.999))
#cc.remove_experiment("train")
#exp = cc.create_experiment("train")

def train(epoch):
    DFCVAE.train()
    train_loss = 0
    part_loss = 0
    for batch_idx, (img,_) in enumerate(train_data):
        img = Variable(img.cuda())
        optimizer.zero_grad()

        feats_x = VGG_loss(img)
        recon, mu, logvar,_ = DFCVAE(img)
        recon_c = Variable(recon.data, requires_grad=True)
        feats_r = VGG_loss(recon_c)

        loss = loss_function(feats_x, feats_r, mu, logvar)
        loss.backward(retain_variables=True)
        recon.backward(recon_c.grad.data)
        train_loss += loss.data[0]
        part_loss += loss.data[0]
        optimizer.step()

        # Logging
        if batch_idx % 5 == 0:
#            exp.add_scalar_value("train_loss", value=train_loss, wall_time=time(), step=batch_idx)
            print('Train Epoch: {} [{}/{} ({:.0f}%)]\tLoss: {:.6f}'.format(
                epoch, batch_idx * len(img), len(train_data.dataset),
                100. * batch_idx / len(train_data),
                part_loss / len(img)), end='\r', flush=True)
            part_loss = 0
    print('\n====> Epoch: {} Average loss: {:.4f}'.format(
          epoch, train_loss / len(train_data.dataset)))
    return img, recon, train_loss

def test(epoch):
    DFCVAE.eval()
    test_loss = 0
    for img,_ in test_data:
        img = Variable(img.cuda(), volatile=True)

        feats_x = VGG_loss(img)
        recon, mu, logvar,_ = DFCVAE(img)
        recon_c = Variable(recon.data, requires_grad=True)
        feats_r = VGG_loss(recon_c)
        loss = loss_function(feats_x, feats_r, mu, logvar)
        test_loss += loss.data[0]
    test_loss /= len(test_data.dataset)
#    exp.add_scalar_value("test_loss", value=test_loss, wall_time=time(), step=epoch)
    print('====> Test set loss: {:.4f}'.format(test_loss))
    return test_loss

def save(path, epoch, train_loss, test_loss):
    torch.save({
            'epoch': epoch + 1,
            'state_dict': DFCVAE.state_dict(),
            'train_loss': train_loss,
            'test_loss': test_loss
        }, path)

